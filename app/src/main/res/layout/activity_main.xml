<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.admin.androideatitserver.MainActivity">

    <TextView
        android:id="@+id/txtSlogan"
        style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:gravity="center"
        android:text="@string/slogan"
        android:textColor="@android:color/black"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/btnSignUp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="21dp"
        android:layout_weight="1"
        android:text="SignUp"
        app:buttonColor="@color/btnSignUp"
        android:textColor="@android:color/black"
        app:cornerRadius="4dp"
        app:shadowColor="@android:color/black"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/btnSignIn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="SignIn"
        app:buttonColor="@color/btnSignActive"
        android:textColor="@android:color/black"
        app:cornerRadius="4dp"
        app:shadowColor="@android:color/black"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        android:layout_alignBaseline="@+id/btnSignUp"
        android:layout_alignBottom="@+id/btnSignUp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"/>





</RelativeLayout>
